/* The typing effect */
@keyframes typing {
  0% { width: 5% }
  20% { width: 5% }
  25% { width: 7% }
  30% { width: 25% }
  35% { width: 45% }
  40% { width: 71% }
  60% { width: 73% }
  85% { width: 81% }
  100% { width: 100% }

}

/* The typewriter cursor effect */
@keyframes blink-caret {
  from, to { border-color: transparent }
  50% { border-color: orange; }
}

